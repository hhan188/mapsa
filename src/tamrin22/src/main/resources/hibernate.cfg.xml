<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/practice22?useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">Aa12345678!</property>

        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>

        <!-- Auto config database schema on startup -->
        <property name="hbm2ddl.auto">validate</property>

        <!--entities declaration-->
        <mapping class="entities.Song"></mapping>
        <mapping class="entities.Artist"></mapping>
        <mapping class="entities.ArtistDetail"></mapping>
        <mapping class="entities.Album"></mapping>


    </session-factory>
</hibernate-configuration>